@model List<Inventory>

@{
    ViewData["Title"] = "Inventory";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Inventory</h1>

    <table class="table text-center">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Item Name</th>
                <th scope="col">Description</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Stock</th>
                <th scope="col">Available</th>
                <th scope="col">For Disabilities</th>
                <th scope="col"><a class="btn btn-outline-success" asp-action="NewInventoryItem">Add New</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ItemID</th>
                    <td>@item.ItemName</td>
                    <td>@item.Description</td>
                    <td>@item.Category</td>
                    <td>$@item.Price</td>
                    <td>@item.StockQuantity</td>
                    <td>@(item.AvailableForSale ? "Yes" : "No")</td>
                    <td>@(item.RecommendedForDisabilities ? "Yes" : "No")</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="EditInventoryItem" asp-controller="Home" asp-route-id="@item.ItemID">Edit</a>
                        <a class="btn btn-outline-danger mt-2" asp-action="DeleteItemFromInventory" asp-controller="Home" asp-route-id="@item.ItemID" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
